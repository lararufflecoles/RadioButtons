<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.rufflecol.lara.radiobuttons">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="es.rufflecol.lara.radiobuttons.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="es.rufflecol.lara.radiobuttons.DisplayImageActivity"
            android:label="@string/activity_display_image">
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.rufflecol.lara.radiobuttons.MainActivity" />
        </activity>

    </application>

</manifest>